doctype html
html
  head
    title Add Pet
  body
    h1 Add New Pet

    form(action="/update-cobj" method="POST")
      label Name:
      input(type="text" name="p_name" required)
      br

      label Age:
      input(type="number" name="p_age" required)
      br

      label Color:
      input(type="text" name="p_color" required)
      br

      label Category:
      input(type="text" name="p_category" required)
      br

      button(type="submit") Submit
